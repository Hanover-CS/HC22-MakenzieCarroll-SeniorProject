<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PronationOfFoot">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="376dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="With your shoes still off take a step, pay attentio to how the weight distributes along your foot. How are your feet positioned while walking?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/pronationGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/neutralPronation"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:onClick="onRadioPronation"
            android:text="Feet stikefloor with heel first then roll towards the toes. Your arch lightly collapses inward. This is neutral pronation!" />

        <RadioButton
            android:id="@+id/overPronation"
            android:layout_height="101dp"
            android:onClick="onRadioPronation"
            android:text="Looks like the whole sole of your foot touches the ground. This means that you are an over pronator and the arch of your foot stretches inward too much." />

        <RadioButton
            android:id="@+id/underPronation"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:onClick="onRadioPronation"
            android:text="Outside of your foot has the most impact. This means that you are a under pronator. Your feet don't flex enough to provide proper shock absorption." />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
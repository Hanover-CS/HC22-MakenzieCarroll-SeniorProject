<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WidthActivity">

    <TextView
        android:id="@+id/width_text"
        android:layout_width="386dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="20sp"
        android:text="@string/width_Screen2"
        android:textAlignment="center"
        android:textColor="#070606"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/widthGroup"
        android:layout_width="384dp"
        android:layout_height="254dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/width_text">

        <RadioButton
            android:id="@+id/regularWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioWidthClicked"
            android:text="@string/regular_answer"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="20sp"
            tools:ignore="UsingOnClickInXml" />

        <RadioButton
            android:id="@+id/wideWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioWidthClicked"
            android:text="@string/wide_answer"
            android:textAlignment="center"
            android:textColor="#EF5252"
            android:textSize="20sp"
            tools:ignore="UsingOnClickInXml" />

        <RadioButton
            android:id="@+id/narrowWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioWidthClicked"
            android:text="@string/narrow_answer"
            android:textAlignment="center"
            android:textColor="#FD0505"
            android:textSize="20sp"
            tools:ignore="UsingOnClickInXml" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="396dp"
        android:layout_height="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/width" />

</androidx.constraintlayout.widget.ConstraintLayout>